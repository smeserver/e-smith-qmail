Index: e-smith-qmail/e-smith-qmail.spec
diff -u e-smith-qmail/root/etc/e-smith/events/actions/qmail-update-group:1.1 e-smith-qmail/root/etc/e-smith/events/actions/qmail-update-group:1.2
--- e-smith-qmail/root/etc/e-smith/events/actions/qmail-update-group:1.1	Tue Aug  9 16:31:34 2005
+++ e-smith-qmail/root/etc/e-smith/events/actions/qmail-update-group	Tue Sep 13 10:42:55 2005
@@ -90,5 +90,12 @@
 		OUTPUT_FILENAME => "/var/qmail/alias/.qmail-$groupName",
 	    }
 	);
+
+    unless (-f "/var/qmail/alias/.qmail-$groupName-default")
+    {
+        symlink "/var/qmail/alias/.qmail-$groupName",
+		"/var/qmail/alias/.qmail-$groupName-default";
+    }
+
 }
 exit (0);
Index: e-smith-qmail/root/etc/e-smith/templates/var/qmail/users/assign/70pseudonyms
diff -u e-smith-qmail/root/etc/e-smith/templates/var/qmail/users/assign/70pseudonyms:1.1 e-smith-qmail/root/etc/e-smith/templates/var/qmail/users/assign/70pseudonyms:1.2
--- e-smith-qmail/root/etc/e-smith/templates/var/qmail/users/assign/70pseudonyms:1.1	Tue Aug  9 16:31:35 2005
+++ e-smith-qmail/root/etc/e-smith/templates/var/qmail/users/assign/70pseudonyms	Tue Sep 13 10:42:55 2005
@@ -87,18 +87,21 @@
 
 	    # Assign mail for user_pseudonym@
 	    $OUT .= "=" . $pseudonym->key . ":${assign}:::\n";
+	    $OUT .= "+" . $pseudonym->key . "-:${assign}:-::\n";
 	    next;
 	}
 
         if ($account->prop('type') eq "group" || $account->key eq "shared")
 	{
 	    $OUT .= "=" . $pseudonym->key . ":${alias_assign}:-:" . $account->key . ":\n";
+	    $OUT .= "+" . $pseudonym->key . "-:${alias_assign}:-:" . $account->key . ":\n";
 	    next;
 	}
 
         if ($account->prop('type') eq "system" )
 	{
 	    $OUT .= "=" . $pseudonym->key . ":${admin_assign}:::\n";
+	    $OUT .= "+" . $pseudonym->key . "-:${admin_assign}:-::\n";
 	    next;
 	}
     }
